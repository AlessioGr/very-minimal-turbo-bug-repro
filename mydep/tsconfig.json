{
    "compilerOptions": {
      "target": "es2018",
      "lib": ["es2018", "dom"],
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": ".",
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": ["**/*", ""],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }